
@{
    ViewData["Title"] = "AddKey";
}
<hr />
<h2>AddKey</h2>

<div class="container">
    <form asp-controller="Projects" asp-action="KeyUpdateAsync" method="post">
        <div class="form-group">
            <label>@ViewBag.user</label>
            @if (ViewBag.key == null)
            {
                <input type="text" class="form-control" id="key" name="key" placeholder="Enter your api key">
            }
            else
            {
                <input type="text" class="form-control" id="key" name="key" value=@ViewBag.key>
            }
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Add/Modify api key</button>
        </div>
    </form>
</div>